#!/usr/bin/env ruby

require_relative "../lib/play"

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)

# Make sure to execute #play below
play(board)
  loop do
    counter = 0
    counter = counter + 1
    puts "turn"
    if counter >= 9
      break
    end
  end
